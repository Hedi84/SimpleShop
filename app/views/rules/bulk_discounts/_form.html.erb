<div class='form'>
  <%= form_with model: @bulk_discount do |f| %>
    <div class='mb-3'> <%= f.label :item_code %> </div>
    <div class='mb-3'> <%= f.text_field :item_code%> </div>
    <div class='mb-3'> <%= f.label :items_number %> </div>
    <div class='mb-3'> <%= f.number_field :items_number %> </div>
    <%= f.fields_for :rule do |rule| %>
        <div class='mb-3'> <%=rule.label :name %> </div>
        <div class='mb-3'> <%=rule.text_field :name %> </div>
        <div class='mb-3'> <%=rule.label :discount %> </div>
        <div class='mb-3'> <%=rule.number_field :discount %> </div>
    <% end %>
    <div class='mb-3'> <%= f.submit %> </div>
  <% end %>
</div>
